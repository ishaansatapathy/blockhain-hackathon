{
  "manifest_version": 3,
  "name": "TrustVault SafePay",
  "description": "Real-time protection against phishing, fraud, and suspicious payment pages. Analyzes websites and blocks dangerous transactions.",
  "version": "1.0.1",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "TrustVault SafePay - Click to check this page",
    "default_popup": "popup.html",
    "default_icon": "images/icon-48.png"
  },
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "storage.html",
  "commands": {
    "check-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Check current page"
    },
    "show-stats": {
      "suggested_key": {
        "default": "Ctrl+Shift+I"
      },
      "description": "Show statistics"
    },
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Toggle extension on/off"
    }
  }
}
